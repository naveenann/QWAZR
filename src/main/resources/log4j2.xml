<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">

    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </Console>

        <RollingFile name="ServerFile" fileName="${env:QWAZR_LOGS:-logs}/server.${hostName}.log"
                     filePattern="${env:QWAZR_LOGS:-logs}/server.${hostName}.log.%d{yyyy-MM-dd}.gz">
            <PatternLayout>
                <Pattern>%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n</Pattern>
            </PatternLayout>
            <Policies>
                <TimeBasedTriggeringPolicy/>
            </Policies>
            <DefaultRolloverStrategy max="31"/>
        </RollingFile>

        <RollingFile name="AccessFile" fileName="${env:QWAZR_LOGS:-logs}/access.${hostName}.log"
                     filePattern="${env:QWAZR_LOGS:-logs}/access.${hostName}.log.%d{yyyy-MM-dd}.gz">
            <PatternLayout>
                <header>
                    #Fields:\tdate\ttime\tc-ip\ts-ip\tcs-method\tcs-uri-stem\tcs-uri-query\tsc-status\tcs(Referer)\tcs(User-Agent)\tcs(bytes)\tsc(bytes)\ttime-taken\tcs(host)%n
                </header>
                <Pattern>%m%n</Pattern>
            </PatternLayout>
            <Policies>
                <TimeBasedTriggeringPolicy/>
            </Policies>
            <DefaultRolloverStrategy max="31"/>
        </RollingFile>

    </Appenders>

    <Loggers>
        <Root level="error">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="ServerFile"/>
        </Root>

        <Logger name="com.qwazr.webapp.accessLogger" level="INFO" additivity="false">
            <AppenderRef ref="AccessFile"/>
        </Logger>

        <Logger name="com.gargoylesoftware.htmlunit" level="OFF"/>
        <Logger name="com.qwazr" level="WARN"/>
        <Logger name="com.qwazr.cluster" level="INFO"/>

    </Loggers>

</Configuration>